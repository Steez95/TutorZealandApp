@page
@model TutorZealandApp.Pages.Education.IndexEducationModel
@{
}

<h2>Uddannelser</h2>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Filtrere
    </button>
    <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Autoteknolog</a></li>
        <li><a class="dropdown-item" href="#">Datamatiker</a></li>
        <li><a class="dropdown-item" href="#">El-Installatør</a></li>
        <li><a class="dropdown-item" href="#">Finansøkonom</a></li>
        <li><a class="dropdown-item" href="#">Handelsøkonom</a></li>
    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Uddannelse</th>
            <th>Semester</th>
            <th>Beskrivelse</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var education in Model.listEducation)
        {
            <tr>
                <td>@education.education</td>
                <td>@education.semester</td>
                <td>@education.description</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./CreateSubject" class="btn btn-primary">Opret Nyt Fag</a>
