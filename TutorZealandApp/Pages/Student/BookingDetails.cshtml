@page
@model TutorZealandApp.Pages.Admin.Sessions.BookingDetailsModel
@{
    <h2>Book a Session with @Model?.Session?</h2>

    <form method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="Student.Name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email (Username)</label>
            <input type="email" class="form-control" id="email" name="Student.Email" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
